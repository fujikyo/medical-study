<%= render "shared/header-user" %>
<div class="sign-up-base">
  <div class="sign-up-title">新規登録</div>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-form', local: true do |f| %>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"名前", maxlength:"40" %>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワード確認欄" %>
      <%= f.text_area :specialize, class:"input-name", id:"specialize", placeholder:"専門分野" %>
      <%= f.text_area :experience, class:"input-name", id:"experience", placeholder:"臨床経験年数" %>
      <%= f.text_field :word, class:"input-name", id:"word", placeholder:"一言" %>
      <%= f.submit "登録完了" ,class:"register-red-btn" %>
  <% end %>
</div>
<%= render "shared/footer" %>
