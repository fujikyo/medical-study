<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>

    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
 
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>

    
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
 

    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>

    
      <%= f.text_area :lastname_hira, class:"input-name", id:"first-name", placeholder:"例) 山田" %>
      <%= f.text_area :firstname_hira, class:"input-name", id:"last-name", placeholder:"例) 陸太郎" %>
  

      <%= f.text_area :lastname_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :firstname_kana, class:"input-name", id:"last-name-kana", placeholder:"例) リクタロウ" %>

  

    <%= f.submit "会員登録" ,class:"register-red-btn" %>
</div>
<% end %>
